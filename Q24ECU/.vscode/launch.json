{
    "version": "0.2.0",
    "projectName": "Q24VCU",
    "configurations": [
      {
        "name": "ST-Flash",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/Tools/ST-LINK_CLI.exe",
        "args": [
          "-P",
          "${workspaceFolder}/build/firmware.bin",
          "0x08000000",
          "-V",
          "-RST"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "console": "integratedTerminal"
      },
      {
        "name": "JLink launch",
        "cwd": "${workspaceRoot}",
        "executable": "${workspaceRoot}/build/Q24VCU.elf",
        "request": "launch",
        "type": "cortex-debug",
        "servertype": "jlink",
        "device": "STM32F446RE",
        "interface": "swd",
        "runToMain": true, // else it starts at reset handler - not interested
        "preLaunchTask": "Build all", // configured in tasks.json
        // "preLaunchCommands": ["Build all"], // you can execute command instead of task
        "svdFile": "", // Include svd to watch device peripherals
        "swoConfig":
        {
            "enabled": true,
            "cpuFrequency": 180000000,
            "swoFrequency": 4000000,
            "source": "probe",
            "decoders":
            [
                {
                    "label": "ITM port 0 output",
                    "type": "console",
                    "port": 0,
                    "showOnStartup": true,
                    "encoding": "ascii"
                }
            ]
        }
    },
    {
        "name": "JLink attach",
        "cwd": "${workspaceRoot}",
        "executable": "${workspaceRoot}/build/Q24VCU.elf",
        "request": "attach",
        "type": "cortex-debug",
        "servertype": "jlink",
        "device": "STM32F446RE",
        "interface": "swd",
        "runToMain": true, // else it starts at reset handler - not interested
        "preLaunchTask": "Build all", // configured in tasks.json
        // "preLaunchCommands": ["Build all"], // you can execute command instead of task
        "svdFile": "", // Include svd to watch device peripherals
        "swoConfig":
        {
            "enabled": true,
            "cpuFrequency": 180000000,
            "swoFrequency": 4000000,
            "source": "probe",
            "decoders":
            [
                {
                    "label": "ITM port 0 output",
                    "type": "console",
                    "port": 0,
                    "showOnStartup": true,
                    "encoding": "ascii"
                }
            ]
        }
    },
    {
        "name": "STlink launch",
        "cwd": "${workspaceRoot}",
        "executable": "${workspaceRoot}/build/Q24VCU.elf",
        "request": "launch",
        "type": "cortex-debug",
        "servertype": "stlink",
        "device": "STM32F446RE",
        "interface": "swd",
        "liveWatch": {
            "enabled": true,
            "samplesPerSecond": 4
        },
        "runToMain": true, // else it starts at reset handler - not interested
        "preLaunchTask": "Build all", // configured in tasks.json
        // "preLaunchCommands": ["Build all"], // you can execute command instead of task
        "svdFile": "", // Include svd to watch device peripherals
        "swoConfig": {} // currently (v1.7.0) not supported
    },
    {
        "name": "STlink attach",
        "cwd": "${workspaceRoot}",
        "executable": "${workspaceRoot}/build/Q24VCU.elf",
        "request": "attach",
        "type": "cortex-debug",
        "servertype": "stutil",
        "device": "STM32F446RE",
        "interface": "swd",
        "liveWatch": {
            "enabled": true,
            "samplesPerSecond": 4
        },
        "runToMain": true, // else it starts at reset handler - not interested
        "preLaunchTask": "Build all", // configured in tasks.json
        // "preLaunchCommands": ["Build all"], // you can execute command instead of task
        "svdFile": "", // Include svd to watch device peripherals
        "swoConfig": {} // currently (v1.7.0) not supported
    },
    ]
  }